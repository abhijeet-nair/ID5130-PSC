{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Configured GCC-13 Compiler",
			"command": "/home/linuxbrew/.linuxbrew/bin/g++-13",
			"args": [
				"-fdiagnostics-color=always",
				"-std=c++20",
				"-g",
				"${workspaceFolder}//*.cpp",
				"-o",
				"${fileDirname}//outfile.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			// "group": "build",
			"group": {
                "kind": "build",
                "isDefault": true
            },
			"detail": "compiler: /home/linuxbrew/.linuxbrew/bin/g++-13"
		}
	]
}